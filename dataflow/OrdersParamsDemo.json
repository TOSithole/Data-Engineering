{
	"name": "OrdersParamsDemo",
	"properties": {
		"folder": {
			"name": "AzureSQLDemo"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "RetailOrders",
						"type": "DatasetReference"
					},
					"name": "AzureSQLOrders"
				}
			],
			"sinks": [
				{
					"name": "OrdersCache"
				}
			],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     order_month as string ('2013-07')",
				"}",
				"source(output(",
				"          order_id as integer,",
				"          order_date as date,",
				"          order_customer_id as integer,",
				"          order_status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: (\"SELECT o.*, FORMAT(order_date, 'yyyy-MM') AS order_month FROM orders AS o WHERE order_date LIKE '{$order_month}%'\" ),",
				"     format: 'query') ~> AzureSQLOrders",
				"AzureSQLOrders sink(validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     store: 'cache',",
				"     format: 'inline',",
				"     output: false,",
				"     saveOrder: 1) ~> OrdersCache"
			]
		}
	}
}